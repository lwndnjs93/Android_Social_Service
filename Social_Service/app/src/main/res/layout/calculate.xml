<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context="com.example.leejuwon.social_service.calculate.Calculate">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="110dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@drawable/mainbar"
            android:orientation="vertical"
            android:padding="0sp"
            android:scaleType="centerCrop" />
    </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:background="@drawable/bsc" />

        <ImageButton
            android:id="@+id/basic01"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/gichobtn"
            android:padding="5sp"
            android:scaleType="centerCrop"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageButton
            android:id="@+id/basic02"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/treebtn"
            android:padding="5sp"
            android:scaleType="centerCrop" />


        <!-- <ImageButton
        android:id="@+id/school"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/edbtn"
        tools:layout_editor_absoluteX="-7dp"
        android:padding="5sp"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteY="200dp" /> -->

        <ImageButton
            android:id="@+id/disability_child"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/ch2"
            android:padding="5sp"
            android:scaleType="centerCrop"
            tools:layout_editor_absoluteX="-7dp"
            tools:layout_editor_absoluteY="300dp" />


        <ImageButton
            android:id="@+id/disability"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/jabtn"
            android:padding="5sp"
            android:scaleType="centerCrop"
            tools:layout_editor_absoluteX="-7dp"
            tools:layout_editor_absoluteY="300dp" />


        <ImageButton
            android:id="@+id/single_parent"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/ch3"
            android:padding="5sp"
            android:scaleType="centerCrop"
            tools:layout_editor_absoluteX="-7dp"
            tools:layout_editor_absoluteY="300dp" />


    </LinearLayout>



</ScrollView>
